<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vistaScroll"
    android:layout_width="match_parent"
    android:background="#E6E6E6"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".View.Formulario"
    tools:showIn="@layout/activity_formulario">

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">

            <ImageView
                android:id="@+id/imagenFormulario"
                android:src="@drawable/iconimagen"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                android:layout_margin="16dp"
                android:background="@drawable/border2">

            </ImageView>
            <Switch
                android:id="@+id/botonSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="10dp"
                android:text="@string/textoSwitchProfesor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">
            <ImageView
                android:id="@+id/iconnombre"
                android:src="@drawable/iconpersona"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="16dp"
                android:scaleType="centerInside"
                tools:ignore="ContentDescription" />


            <LinearLayout
                android:id="@+id/layoutNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/nombre"
                    android:textSize="20sp"
                    android:hint="@string/hintNombreFormulario"
                    android:textColor="#000"
                    android:layout_marginBottom="8dp"
                    android:inputType="textPersonName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/apellidos"
                    android:textSize="20sp"
                    android:hint="@string/hintApellidoFormulario"
                    android:textColor="#000"
                    android:inputType="textPersonName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/errorNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:text="@string/errorFormularioNombre"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">

            <ImageView
                android:id="@+id/iconsexo"
                android:layout_margin="16dp"
                android:src="@drawable/iconsexo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerInside"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/border3"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/sexoSpinner"
                    android:layout_height="25dp"
                    android:prompt="@string/promtsexo"
                    android:layout_width="165dp"
                    android:entries="@array/listaopcionessexo" />
            </LinearLayout>

            <Button
                android:id="@+id/botonAnadirOpcion"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="16dp"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:background="#00000000"
                android:drawableTop="@drawable/add" />
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">

            <ImageView
                android:id="@+id/iconfechanacimiento"
                android:src="@drawable/iconfecha"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="16dp"
                android:scaleType="centerInside"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:id="@+id/layoutFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">
            <EditText
                android:id="@+id/dateText"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="#000"
                android:hint="@string/hintFechaFormulario"
                android:textSize="20sp"
                android:inputType="date" />
            <TextView
                android:id="@+id/errorFecha"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="@string/errorFormularioFecha"/>
            </LinearLayout>
            <Button
                android:id="@+id/botonDate"
                android:layout_marginTop="22dp"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:background="#00000000"
                android:drawableTop="@drawable/date" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">

            <ImageView
                android:id="@+id/icontelefono"
                android:src="@drawable/icontelefono"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="16dp"
                android:scaleType="centerInside"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/layoutTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">
            <EditText
                android:id="@+id/telefonoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="11"
                android:hint="@string/hintTelefonoFormulario"
                android:textColor="#000"
                android:textSize="20sp"
                android:inputType="phone" />
            <TextView
                android:id="@+id/errorTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="@string/errorFormularioTelefono"/>
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">
            <ImageView
                android:id="@+id/iconemail"
                android:src="@drawable/iconemail"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="16dp"
                android:scaleType="centerInside"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/layoutEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">
            <EditText
                android:id="@+id/emailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/hintEmailFormulario"
                android:textSize="20sp"
                android:textColor="#000"
                android:inputType="textEmailAddress" />
            <TextView
                android:id="@+id/errorEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="@string/errorFormularioEmail"/>
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>


