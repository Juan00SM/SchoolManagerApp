<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".View.Busqueda"
    android:layout_gravity="center_horizontal"
    tools:showIn="@layout/activity_busqueda"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">
            <ImageView
                android:id="@+id/iconnombre"
                android:src="@drawable/iconpersona"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="16dp"
                android:scaleType="centerInside"
                tools:ignore="ContentDescription" />


            <LinearLayout
                android:id="@+id/layoutNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/nombreBusqueda"
                    android:textSize="20sp"
                    android:hint="@string/hintNombreFormulario"
                    android:textColor="#000"
                    android:layout_marginBottom="8dp"
                    android:inputType="textPersonName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/apellidosBusqueda"
                    android:textSize="20sp"
                    android:hint="@string/hintApellidoFormulario"
                    android:textColor="#000"
                    android:inputType="textPersonName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/errorNombreBusqueda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:text="@string/errorFormularioNombre"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">

            <ImageView
                android:id="@+id/iconsexo"
                android:layout_margin="16dp"
                android:src="@drawable/iconsexo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerInside"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/border3"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/sexoSpinnerBusqueda"
                    android:layout_height="25dp"
                    android:prompt="@string/promtsexo"
                    android:layout_width="165dp"
                    android:entries="@array/listaopcionessexo" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">

            <ImageView
                android:id="@+id/iconfechanacimiento"
                android:src="@drawable/iconfecha"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="16dp"
                android:scaleType="centerInside"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:id="@+id/layoutFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/dateTextBusqueda"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="#000"
                    android:hint="@string/hintFechaFormulario"
                    android:textSize="20sp"
                    android:inputType="date" />
                <TextView
                    android:id="@+id/errorFechaBusqueda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:text="@string/errorFormularioFecha"/>
            </LinearLayout>
            <Button
                android:id="@+id/botonDateBusqueda"
                android:layout_marginTop="22dp"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:background="#00000000"
                android:drawableTop="@drawable/date" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">

            <ImageView
                android:id="@+id/icontelefono"
                android:src="@drawable/icontelefono"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="16dp"
                android:scaleType="centerInside"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/layoutTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/telefonoTextBusqueda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="11"
                    android:hint="@string/hintTelefonoFormulario"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:inputType="phone" />
                <TextView
                    android:id="@+id/errorTelefonoBusqueda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:text="@string/errorFormularioTelefono"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/botonBuscar"
            android:padding="12dp"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borderboton"
            android:textSize="30dp"
            android:text="Buscar"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>