<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vistaScroll"
    android:layout_width="match_parent"
    android:background="#E6E6E6"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".View.Formulario"
    tools:showIn="@layout/activity_formulario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">

            <ImageView
                android:id="@+id/imagenFormulario"
                android:src="@drawable/iconimagen"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                android:layout_margin="16dp"
                android:background="@drawable/border2">

            </ImageView>
            <Switch
                android:id="@+id/botonSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="10dp"
                android:text="Â¿Profesor?   " />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">
            <ImageView
                android:id="@+id/iconnombre"
                android:src="@drawable/iconpersona"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="16dp"
                android:scaleType="centerInside"
                tools:ignore="ContentDescription" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/nombre"
                    android:textSize="20sp"
                    android:hint="Nombre"
                    android:textColor="#000"
                    android:layout_marginBottom="8dp"
                    android:inputType="textPersonName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/apellidos"
                    android:textSize="20sp"
                    android:hint="Apellidos"
                    android:textColor="#000"
                    android:inputType="textPersonName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">

            <ImageView
                android:id="@+id/iconsexo"
                android:layout_margin="16dp"
                android:src="@drawable/iconsexo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerInside"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/border3">
                <Spinner

                    android:id="@+id/sexoSpinner"
                    android:layout_height="wrap_content"
                    android:prompt="@string/promtsexo"
                    android:layout_width="130dp"
                    android:entries="@array/listaopcionessexo" />
            </LinearLayout>
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">

            <ImageView
                android:id="@+id/iconfechanacimiento"
                android:src="@drawable/iconfecha"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="16dp"
                android:scaleType="centerInside"
                tools:ignore="ContentDescription" />
            <EditText
                android:id="@+id/dateText"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="#000"
                android:layout_margin="16dp"
                android:hint="Fecha Nacimiento"
                android:textSize="20sp"
                android:inputType="date" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">

            <ImageView
                android:id="@+id/icontelefono"
                android:src="@drawable/icontelefono"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="16dp"
                android:scaleType="centerInside"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/telefonoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="11"
                android:hint="Telefono"
                android:layout_margin="16dp"
                android:textColor="#000"
                android:textSize="20sp"
                android:inputType="phone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp">
            <ImageView
                android:id="@+id/iconemail"
                android:src="@drawable/iconemail"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="16dp"
                android:scaleType="centerInside"
                tools:ignore="ContentDescription" />


            <EditText
                android:id="@+id/emailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_margin="16dp"
                android:hint="Email"
                android:textSize="20sp"
                android:textColor="#000"
                android:inputType="textEmailAddress" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>


