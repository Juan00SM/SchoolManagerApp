<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDark</item>
        <item name="colorPrimaryDark">@color/colorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorBlack</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="android:itemBackground">@color/colorPrimaryDark</item>
        <item name="android:itemTextAppearance">@style/itemTextMenu</item>
        <item name="android:windowBackground">@color/windowbackground</item>
    </style>
    <style name="itemTextMenu" parent="android:TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/colortextmenu</item>
    </style>
    <style name="Theme.TextAppearance.Form" parent="android:Theme.Holo">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:editTextColor">@color/colortextmenu</item>
        <item name="android:spinnerItemStyle">@style/Spinner</item>
        <!-- your other custom widget styles -->
    </style>
    <style name="Spinner" parent="android:Widget.Material.Spinner">
        <item name="android:textColor">@color/colortextmenu</item>
    </style>

</resources>
